block content
  //- HERO
  .hero

    .portfolio
      svg.draw(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', viewbox='0 0 870 180', style='enable-background:new 0 0 870 180;', xml:space='preserve')
        g#P
          path.st0(d='M78,0H0v180h78v-36c39.8,0,72-32.2,72-72S117.8,0,78,0z')
        g#O
          circle.st0(cx='318', cy='90', r='90')
        g#R
          path.st1(d='M552,0h-66v132h66c36.5,0,66-29.5,66-66S588.5,0,552,0z')
          polygon.st0(points='486,180 618,180 486,0')
